package com.nagarro.adminPanel.utilities;

public class GenerateRandomID {

	public String generateID(String emailID, int contactNumber, String customerName) {

		String firstPart = emailID.substring(0, 3);

		double secondPart = 0;

		for (int i = 0; i < 3; i++) {
			secondPart += contactNumber % 10;
			contactNumber = contactNumber / 10;
		}

		String thirdPart = customerName.substring(0, 3);

		String finalID = firstPart + secondPart + thirdPart;

		return finalID;
	}

}
