	@Autowired
	SessionDao sessionDao;

	public int registerUserInDB(CustomerDetails userInformation) {

		sessionDao.begin();
		sessionDao.getSession().save(userInformation);

		sessionDao.commit();
		sessionDao.close();

		return true;

	}

}
